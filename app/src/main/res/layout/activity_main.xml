<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mymacz.smartgarden.MainActivity">

    <TextView
        android:id="@+id/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SmartGarden"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Header"
        android:layout_marginTop="30dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnWater1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water 1" />

        <TextView
            android:id="@+id/tvStatusWater1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water 1"
            android:layout_toRightOf="@id/btnWater1"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnWater2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWater1"
            android:text="Water 2" />

        <TextView
            android:id="@+id/tvStatusWater2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water 2"
            android:layout_below="@id/tvStatusWater1"
            android:layout_toRightOf="@id/btnWater2"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnWater3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWater2"
            android:text="Water 3" />

        <TextView
            android:id="@+id/tvStatusWater3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water 3"
            android:layout_below="@id/tvStatusWater2"
            android:layout_toRightOf="@id/btnWater3"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnFeeder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWater3"
            android:text="Feeder" />

        <TextView
            android:id="@+id/tvStatusFeeder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeder Status"
            android:layout_below="@id/tvStatusWater3"
            android:layout_toRightOf="@id/btnFeeder"
            android:layout_marginTop="25dp"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>
